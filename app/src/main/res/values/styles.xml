<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlainTextStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/plain_text_frame</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#BEFFFFFF</item>
        <item name="helperText">Поле обязательно для заполнения!</item>
        <item name="helperTextTextColor">@color/coral</item>
    </style>

    <style name="PlainTextIconStyle" parent="PlainTextStyle">
        <item name="android:drawableStart">@drawable/person</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="navigationBarStyle">
        <item name="android:background">@color/cyan</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Material.Light.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/plain_text_frame</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:drawableTintMode">src_in</item>
        <item name="android:textAppearance">@style/montserratStyle.Black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="paddingStart">15dp</item>
        <item name="paddingEnd">15dp</item>
    </style>

    <style name="montserratStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="montserratStyle.Black" parent="montserratStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="montserratStyle.White" parent="montserratStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/cyan</item>
        <item name="android:actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <item name="titleTextStyle">@style/montserratStyle.White</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>