<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/blue"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:tint="@color/white"
            app:backgroundTint="#00FFFFFF"
            app:elevation="0dp"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rv_variants"
            app:layout_constraintStart_toStartOf="@+id/rv_variants"
            app:layout_constraintTop_toBottomOf="@+id/rv_variants"
            app:pressedTranslationZ="0dp"
            app:srcCompat="@drawable/baseline_add_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_delete_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:tint="@color/white"
            app:backgroundTint="#00FFFFFF"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pressedTranslationZ="0dp"
            app:srcCompat="@drawable/baseline_delete_24" />

        <TextView
            android:id="@+id/tv_question_title"
            style="@style/montserratStyle.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_question_name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/darkBlue"
            android:ems="10"
            android:hint="@string/question_name_hint"
            android:inputType="text|textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_question_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_title" />

        <RadioGroup
            android:id="@+id/rg_correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:checkedButton="@id/rb_option_1"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_question_name"
            app:layout_constraintTop_toBottomOf="@+id/btn_add_variant">

            <RadioButton
                android:id="@+id/rb_option_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:baselineAligned="false"
                android:paddingStart="10dp"
                android:text="1. "
                android:textAppearance="@style/montserratStyle.White"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_option_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="10dp"
                android:text="2. "
                android:textAppearance="@style/montserratStyle.White"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_option_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="10dp"
                android:text="3. "
                android:textAppearance="@style/montserratStyle.White"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rb_option_4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="10dp"
                android:text="4. "
                android:textAppearance="@style/montserratStyle.White"
                android:textColor="@color/white" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/rg_correct_answer"
            app:layout_constraintEnd_toEndOf="@+id/et_question_name"
            app:layout_constraintStart_toEndOf="@+id/rg_correct_answer"
            app:layout_constraintTop_toTopOf="@+id/rg_correct_answer">

            <EditText
                android:id="@+id/et_variant_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/darkBlue"
                android:ems="10"
                android:hint="@string/question_variant_hint"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_variant_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/darkBlue"
                android:ems="10"
                android:hint="@string/question_variant_hint"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_variant_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/darkBlue"
                android:ems="10"
                android:hint="@string/question_variant_hint"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_variant_4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="@color/darkBlue"
                android:ems="10"
                android:hint="@string/question_variant_hint"
                android:inputType="text" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_variants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/et_question_name"
            app:layout_constraintStart_toStartOf="@+id/et_question_name"
            app:layout_constraintTop_toBottomOf="@+id/et_question_name"
            tools:itemCount="4"
            tools:listitem="@layout/item_question_variant" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
